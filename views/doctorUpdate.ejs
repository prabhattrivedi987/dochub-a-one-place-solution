<h1>Doctor's Update Page</h1>
<body>

    <form action="/updateDoctor/<%=doctor._id%>" method="post">
    <div>
        <input type="text" name="name" placeholder="Doctor Name" value="<%=doctor.name%>"required />
    </div>
    <div>
        <input type="email" name="email" placeholder="Email" value="<%=doctor.email%>" required />
    </div>
    <div>
        <input type="text" name="phone" placeholder="Phone" value="<%=doctor.phone%>" required />
    </div>
    <div>
        <input type="text" name="designation" placeholder="Designation" value="<%=doctor.designation%>" required />
    </div>
    <div>
        <input type="text" name="fee" placeholder="Fee" value="<%=doctor.fee%>" required />
    </div>
    <div>
        <button type="Submit">Update</button>
    </div>
</form>
</body>
